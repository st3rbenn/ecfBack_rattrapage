{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        {% if is_granted("ROLE_USER") %}
            <h1 class="fs-4 text-center mt-4">Bienvenue, {{ app.user.userIdentifier }} {{ app.user.id }}</h1>
        {% endif %}
        <div class="row gap-3">
            {% for g in galleries %}
                    <div class="row mb-4 mt-4">
                        <div class="col-12 col-md-6 align-self-center">
                            <img src="{{ asset('uploads/images/' ~ g.image) }}" alt="image de la gallerie {{ g.name }}" class="img-fluid">
                        </div>
                        <div class="col-12 col-md-6">
                            <h2 class="text-dark">{{ g.name }}</h2>
                            <p class="text-dark">{{ g.description }}</p>
                            <a href="{{ path('app_gallery_show', {'id': g.id}) }}" class="btn btn-primary">Voir la g'Artllery</a>
                            {% if g.user == app.user %}
                                <a href="{{ path('app_gallery_edit', {'id': g.id}) }}" class="btn btn-warning">Modifier la g'Artllery</a>
                                <a href="{{ path('app_gallery_delete', {'id': g.id}) }}" class="btn btn-danger">Supprimer la g'Artllery</a>
                            {% endif %}
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

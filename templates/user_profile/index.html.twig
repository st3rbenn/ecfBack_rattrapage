{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="panel panel-default">
                    <div class="panel-heading mb-3">
                        <h3 class="panel-title">Mon profil</h3>
                    </div>
                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-body d-flex flex-column">
                                <label for="username_id" class="form-label">
                                    nom de compte
                                    <input type="text" value="{{ user.userIdentifier }}" class="form-control mb-2" id="username_id" disabled>
                                </label>
                                <label for="mail_id" class="form-label">
                                    e-mail
                                    <input type="email" value="{{ user.email }}" class="form-control mb-2" id="mail_id" disabled>
                                </label>
                                <label for="password_id" class="form-labelmt-3">
                                    mot de passe
                                    <input type="password" value="{{ user.password }}" class="form-control mb-2 " id="password_id" disabled>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body d-flex flex-column gap-3">
                        <a href="{{ path('app_user_profile_update') }}">modifier mon profil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

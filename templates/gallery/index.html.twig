{% extends 'base.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}

{% block body %}
    <ul class="container mt-5 list-unstyled">
        <h1 class="text-dark mb-4">Vos diff√©rentes g'Artlery</h1>
        {% for g in galleries %}
            {% if g.user == app.user %}
                <li class="row mb-4">
                    <div class="col-12 col-md-6">
                        <img src="{{ asset(g.image) }}" alt="image de la gallerie {{ g.name }}" class="img-fluid">
                    </div>
                    <div class="col-12 col-md-6">
                        <h2 class="text-dark">{{ g.name }}</h2>
                        <p class="text-dark">{{ g.description }}</p>
                        <a href="{{ path('app_gallery_show', {'id': g.id}) }}" class="btn btn-primary">Voir la g'Artllery</a>
                        <a href="{{ path('app_gallery_edit', {'id': g.id}) }}" class="btn btn-warning">Modifier la g'Artllery</a>
                        <a href="{{ path('app_gallery_delete', {'id': g.id}) }}" class="btn btn-danger">Supprimer la g'Artllery</a>
                    </div>
                </li>
            {% endif %}
        {% endfor %}

        <a href="{{ path('app_gallery_add') }}" class="btn btn-secondary">
            Ajouter une nouvelle galerie
        </a>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container mt-5 position-relative">
        <div class="card-text d-flex flex-column gap-3 mb-4 position-sticky">
            <h1 class="text-dark col">
                {{ gallery.name }}
            </h1>
            <p class="card-text col">
              {{ gallery.description }}
            </p>
            {% if gallery.user == app.user %}
                <a href="{{ path('app_gallery_add_art', {'id': gallery.id}) }}" class="btn btn-secondary">
                    Ajouter une oeuvre
                </a>
            {% endif %}
        </div>
        {% for g in listOfArts %}
                <div class="card mb-4 gap-3 mb-4 mt-4 p-3">
                    <div class="mb-3 align-self-center">
                        <img src="{{ asset('uploads/images/' ~ g.image) }}" alt="image de l'oeuvre {{ g.name }}" class="img-fluid">
                    </div>
                    <div class="col-12 col-md-6">
                        <h2 class="text-dark">
                            {{ g.name }}
                        </h2>
                        <p class="text-dark mt-3">
                            {{ g.description }}
                        </p>
                    </div>
                    {% if gallery.user == app.user %}
                            <div class="d-flex flex-column container-sm gap-3 justify-content-center align-items-center">
                                <a href="{{ path('app_gallery_editart', {'galleryItem_id': g.id, 'gallery_id': gallery.id}) }}" class="btn btn-warning col-9">
                                    Modifier l'oeuvre
                                </a>
                                <a href="{{ path('app_gallery_delete_art', {'galleryItem_id': g.id, 'gallery_id': gallery.id}) }}" class="btn btn-danger col-9">
                                    Supprimer l'oeuvre
                                </a>
                            </div>
                    {% endif %}
                </div>
        {% endfor %}
    </div>
{% endblock %}

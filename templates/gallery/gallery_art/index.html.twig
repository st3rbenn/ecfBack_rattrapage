{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 card">
        <h1 class="text-dark mb-4">{{ gallery.name }}</h1>
        {% for g in listOfArts %}
            {% if g.gallery == gallery %}
                <li class="row mb-4">
                    <div class="col-12 col-md-6">
                        <img src="{{ asset(g.image) }}" alt="image de l'oeuvre {{ g.name }}" class="img-fluid">
                    </div>
                    <div class="col-12 col-md-6">
                        <h2 class="text-dark">{{ g.name }}</h2>
                        <p class="text-dark">{{ g.description }}</p>
                    </div>
                </li>
                <a href="{{ path('app_gallery_editart', {'galleryItem_id': g.id, 'gallery_id': gallery.id}) }}" class="btn btn-warning">Modifier l'oeuvre</a>
                <a href="{{ path('app_gallery_delete_art', {'galleryItem_id': g.id, 'gallery_id': gallery.id}) }}" class="btn btn-danger">Supprimer l'oeuvre</a>
            {% endif %}
        {% endfor %}

        <a href="{{ path('app_gallery_add') }}" class="btn btn-secondary">
          Ajouter une oeuvre
        </a>
    </div>
{% endblock %}
